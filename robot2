#include <stdio.h>
#include <conio.h>


int main()
{
    int s1, s2, s3, m1, m2;
    m1 = m2 = s1 = s2 = s3 = 0;
    printf("     Tabela de Sensores\n");
    printf("     Tecla     Sensor 1     Sensor 2    Sensor 3\n        1        1              0             0\n        2        0              1             1\n        3        0              1             0\n        4        0              0             1\n        5        1              1             1\n        6        1              0             0\n        7        1              0             1\n        8        1              1             0\n");
   
    printf("\n \n");
    while(1)
        {//Ler sensor
        if( kbhit()){
            int tecla = getch();
            //printf("%d", tecla);
        }


        //Função das teclas
        if(tecla=='1'){
            s1=1;
            s2 = s3 = 0;
        }else if(tecla=='2'){
            s1=0;
            s2 = s3 = 1;
        }else if(tecla=='3'){
            s1 = s3 = 0;
            s2 = 1;
        }else if(tecla=='4'){
            s1 = s2 = 0;
            s3 = 1;
        }else if(tecla=='5'){
            s1 = s2 = s3;
        }else if(tecla=='6'){
            s1= 1;
            s2 = s3 = 0;
        }else if(tecla=='7'){
            s1 = s3 = 1;
            s2 = 0;
        }else if(tecla=='8'){
            s1 = s2 = 0;
            s3 = 0;
        }

        //Análise dos sensores
        //S1      | S2 |          S3         ||  M1   | M2
        if((s1 = 0) && (s2 = 0) && (s3 = 0)){
                m1 = 1;    m2 = 1;
        }else if((s1 = 0) && (s2 = 1) && (s3 = 1)){
                m1 = 1;    m2 = 0;
        }else if((s1 = 0) && (s2 = 1) && (s3 = 0)){
                m1 = 1;    m2 = 0;
        }else if((s1 = 0) && (s2 = 0) && (s3 = 1)){
                m1 = 1;    m2 = 0;
        }else if((s1 = 1) && (s2 = 1) && (s3 = 1)){
                m1 = 1;    m2 = 0;
        }else if((s1 = 1) && (s2 = 0) && (s3 = 0)){
                m1 = 0;    m2 = 1;
        }else if((s1 = 1) && (s2 = 0) && (s3 = 1)){
                m1 = 1;    m2 = 1;
        }else if((s1 = 1) && (s2 = 1) && (s3 = 0)){
                m1 = 0;    m2 = 1 ;
        }


        //Imprimindo resultado
        printf("/r    %d   %d", m1, m2);

        }


    return 0;
}
